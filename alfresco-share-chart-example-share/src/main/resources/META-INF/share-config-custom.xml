<!-- Share configuration related to this particular Share module extension, such as:
     - Doclib action config
     - Form config
     - Aspect and Type config
     - Advanced Search

    Note. Any configuration related to the whole Share.war webapp
           (i.e. not specific to this share extension) should be
            placed in the environment specific config file:
             alfresco/tomcat/shared/classes/alfresco/web-extension/share-config-custom.xml
     -->
<alfresco-config>
    <config evaluator="string-compare" condition="Remote">
        <remote>
            <endpoint>
                <id>example-api</id>
                <name>Alfresco Chart Example API</name>
                <connector-id>http</connector-id>
                <endpoint-url>http://alfresco-chart-example-api:8000</endpoint-url>
            </endpoint>
        </remote>
    </config>
</alfresco-config>